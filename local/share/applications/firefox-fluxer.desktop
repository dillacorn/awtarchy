# github.com/dillacorn/awtarchy/tree/main/local/share/applications
# ~/.local/share/applications/firefox-fluxer.desktop

[Desktop Entry]
Version=1.0
Type=Application
Name=Fluxer Web (Firefox)
Comment=Fluxer in a dedicated Firefox profile, auto-created if missing
Exec=/bin/sh -lc 'PROFILE="$HOME/.mozilla/firefox/fluxer-profile"; if [ ! -d "$PROFILE" ]; then /usr/bin/firefox -CreateProfile "fluxer-profile $PROFILE"; fi; MOZ_ENABLE_WAYLAND=1 MOZ_USE_XINPUT2=1 exec /usr/bin/firefox --class=fluxer --name=Fluxer --profile "$PROFILE" --new-window https://web.fluxer.app'
Icon=firefox
Terminal=false
Categories=Network;InstantMessaging;
StartupWMClass=fluxer
StartupNotify=true
SingleMainWindow=true
